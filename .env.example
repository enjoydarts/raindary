# Next.js
NEXTAUTH_URL=http://localhost:3000
NODE_ENV=development

# Auth.js
# 生成コマンド: openssl rand -hex 32
AUTH_SECRET=

# Raindrop.io OAuth
# https://raindrop.io/app/settings/integrations で取得
AUTH_RAINDROP_ID=
AUTH_RAINDROP_SECRET=

# Database
# ローカル開発環境
DATABASE_URL=postgresql://postgres:postgres@db:5432/raindary
# または Supabase Cloud（必ずPooler Connection Stringを使用）
# DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
# または Neon（必ずPooled Connection Stringを使用）
# DATABASE_URL=postgresql://[USER]:[PASSWORD]@[HOST].neon.tech/[DB]?sslmode=require

# Inngest
# ローカル開発環境
INNGEST_EVENT_KEY=local_dev_key
INNGEST_SIGNING_KEY=local_signing_key
INNGEST_DEV=1
INNGEST_BASE_URL=http://inngest:8288
# または Inngest Cloud（本番環境）
# INNGEST_EVENT_KEY=
# INNGEST_SIGNING_KEY=
# INNGEST_DEV=0
# INNGEST_BASE_URL=https://inn.gs

# Extract Service (Not implemented yet)
EXTRACT_API_URL=http://extract:8000/extract

# Anthropic Claude
# https://console.anthropic.com/ で取得
ANTHROPIC_API_KEY=

# Theme Classification (任意)
# 初回分類時のテーマ数上限（デフォルト: 100）
# THEME_INITIAL_MAX=100
# 増分分類時の新規テーマ数上限（デフォルト: 20）
# THEME_INCREMENTAL_MAX=20

# Token Encryption
# 生成コマンド: openssl rand -hex 32
ENCRYPTION_KEY=

# レート制限 (Upstash Redis - オプション、本番環境用)
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=

# Ably (リアルタイム通知)
# https://ably.com/accounts/any/apps で取得
ABLY_API_KEY=
NEXT_PUBLIC_ABLY_KEY=
